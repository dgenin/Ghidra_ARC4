:asl^COND^FLAGS opA1, opB1, opC1 is COND ... & FLAGS ... & iI=0x10 ... & iB=iC ... & opA1 ... & opB1 & opC1
{
	build COND;
	local tmp = (opB1 & 0x80000000) >> 31;
	tmpC = tmp:1;
	opA1 = opB1 << 1;
	local result = opA1;
	resultflags(result);
	#addflags(opB1, opC1);
	# logicflags();
	build FLAGS;
}

